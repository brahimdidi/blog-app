<li class ='list-group-item d-flex'>    
  <img src=<%= @user.photo %> alt='profile picture' class=' w-50'>        
  <div class='ml-4 p-1'>     
    <h1>@<%= @user.name %></h1>     
    <span>posts: <%= @user.posts.length %></span>
  </div>        
</li> 
<div class ='card  p-1'>
  <span>Bio :</span>
  <p>
  <%= @user.bio %>
  </p>
</div> 
<ul class='list-group mt-3'>
  <% @recent_posts.each do |post| %>
    <li class='list-group-item'>
    Post #<%=post.id%>
   <h4> <%= post.title %> </h4>
    <p>
    <%= post.text%>
    </p>
    <span>comments: <%= post.comments.length %></span>
    <span class='ml-2'>likes: <%= post.likesCounter %></span>
    <%= link_to 'see post', user_post_path(@user,post), class: 'btn btn-secondary w-100' %>
    </li>
  <% end %>
</ul>
<%= link_to 'see all posts', user_posts_path(@user), class: 'btn btn-dark w-100' %>