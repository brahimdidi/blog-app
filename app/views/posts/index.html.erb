<li class ='list-group-item d-flex'>
  <img src=<%= @user.photo %> alt='profile picture' class='p-3 w-25'>
  <div class='ml-4 p-1'>
    <h1> Name:  <%= @user.name %></h1>
    <span> Posts:  <%= @user.posts.length %></span>
  </div>
</li>
<% if @posts.empty? %>
  <%= 'No posts yet' %>
<%else%>
<%= render :partial => "shared/postlist", :posts => :posts %>
<%= render :partial => "posts/next_page" %>
<%end%>
