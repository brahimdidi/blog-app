<li class ='list-group-item d-flex'>
  <img src=<%= @user.photo %> alt='profile picture' class='p-3'>
  <div class='ml-4 p-1'>
    <h1> Name:  <%= @user.name %></h1>
    <span>Posts number  <%= @user.postsCounter %></span>
  </div>
</li>
<% if @posts.empty? %>
  <%= 'No posts yet' %>
<%else%>
  <ul class='list-group mt-3'>
    <% @posts.each do |post| %>
      <% @comments = post.comments %>
      <li class='list-group-item'>
    Post #<%=post.id%>
    <h4> <%= post.title %> </h4>
      <p>
      <%= post.text%>
      </p>
      
      <% if @comments.empty? %>
         <%= 'No Comments yet' %>
         <%else%>
      <div class = 'card p-1 mt-1'>
        <% @comments.each do |comment|%>
        <p class='bg-light p-1'><%=comment.user.name%>: <%=comment.text%><p>
        <%end%>
      </div>
    <% end %>
    <%= link_to 'comment on this post', new_user_post_comment_path(@user,post), class:'btn btn-dark d-block' %>
    <% end %>
    </li>
  </ul>
<%end%>
