<li class ='list-group-item d-flex'>
  <img src=<%= @user.photo %> alt='profile picture' class='p-3 w-25'>
  <div class='ml-4 p-1'>
    <h1> Name:  <%= @user.name %></h1>
    <span> Posts:  <%= @user.postsCounter %></span>
  </div>
</li>
<% if @posts.empty? %>
  <%= 'No posts yet' %>
<%else%>
  <ul class='list-group mt-3'>
    <% @posts.each do |post| %>
      <% @comments = post.comments %>
      <li class='list-group-item'>
    Post #<%=post.id%>
    <h4 class='border-top'>Title: <%= post.title %> </h4>
      <p class='p-2'>
      <%= post.text%> 
      </p>
      <div><span>comments: <%= post.comments.length %></span>
      <span class='ml-2'>likes: <%= post.likesCounter%></span></div>
      
      <% if @comments.empty? %>
         <%= 'No Comments yet' %>
         <%else%>
      <div class = 'card p-1 mt-1'>
        <% @comments.each do |comment|%>
        <p class='bg-light p-1'><%=comment.user.name%>: <%=comment.text%><p>
        <%end%>
      </div>
    <% end %>
    <br>
    <div class = 'btn-group'>
      <%= link_to 'show this post', user_post_path(@user,post), class:'btn btn-outline-dark ' %>
      <%= form_with model: @like, url: likes_new_path do |form| %>
        <%= form.hidden_field :post_id, value: post.id %>
        <%= form.submit "like this Post", class: 'btn btn-outline-danger ' %>
      <% end %>
      <%= link_to 'comment on this post', new_user_post_comment_path(@user,post), class:'btn btn-outline-primary' %>
    </div>
    <% end %>
    </li>
  </ul>
<%end%>
